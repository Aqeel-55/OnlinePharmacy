@code {
    //Navigation menu is collapse
    private bool collapseNavMenu = true;

    // Calculate the CSS class based on the collapseNavMenu state
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    // Toggle the collapseNavMenu state when the navbar toggler button is clicked
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}